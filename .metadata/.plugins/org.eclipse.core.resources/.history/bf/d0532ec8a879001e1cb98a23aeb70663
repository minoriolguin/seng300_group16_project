package com.thelocalmarketplace.software;

import java.util.HashMap;
import java.util.Map;

import com.jjjwelectronics.scanner.Barcode;
import com.thelocalmarketplace.hardware.BarcodedProduct;
import com.thelocalmarketplace.hardware.Product;

//use get instance of object 
//need singleton to extract from the database 


//barcode scanner must be created in setup 
// electronic scale must be created in setup 
// both require power 


public class LocalMarketPlaceDatabase {
	//all barcoded products are priced per unit 
	
	private static final Map<Barcode, BarcodedProduct> BARCODED_PRODUCT_DATABASE = new HashMap<>();
	public static final Map<Product, Integer> INVENTORY = new HashMap<>();
	
	//begin populating the inventory 
	
	public void addBarcodedProductToDatabase(BarcodedProduct barcodedProduct) {
		BARCODED_PRODUCT_DATABASE.put(barcodedProduct.getBarcode(), barcodedProduct);
	}
	
	

	
}
